  <!-- Signup Modal -->
  <div id="signupModal" class="modal-bg" role="dialog" aria-modal="true" aria-labelledby="signupTitle" tabindex="-1">
    <div class="modal">
      <button class="modal-close" aria-label="Close signup modal">&times;</button>
      <h2 id="signupTitle"><i class="fas fa-user-plus"></i> Sign Up</h2>
      <form id="signupForm" novalidate>
        <label for="signupEmail" class="block text-sm font-medium text-gray-700">Email Address</label>
        <input type="email" id="signupEmail" name="signupEmail" placeholder="farmer@email.com" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-green-500 mb-4" required />
        <label for="signupPassword" class="block text-sm font-medium text-gray-700">Password</label>
        <input type="password" id="signupPassword" name="signupPassword" placeholder="Create a secure password" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-green-500 mb-4" minlength="8" required />
        <div id="signupError" class="text-red-600 text-sm hidden mb-2"></div>
        <button type="submit" class="w-full bg-green-600 hover:bg-green-700 text-white font-bold py-3 rounded-lg transition-colors duration-200 flex items-center justify-center space-x-2">
          <i class="fas fa-user-plus"></i>
          <span>Sign Up</span>
        </button>
      </form>
      <p class="switch-link" id="switchToLogin">Already have an account? Log In</p>
    </div>

  <!-- Google Sign-In Modal -->
  <div id="googleModal" class="modal-bg" role="dialog" aria-modal="true" aria-labelledby="googleTitle" tabindex="-1">
    <div class="modal">
      <button class="modal-close" aria-label="Close Google sign-in modal">&times;</button>
      <h2 id="googleTitle"><img src="https://cdn1.iconfinder.com/data/icons/google-s-logo/150/Google_Icons-09-512.png" alt="Google logo" class="w-6 h-6 inline-block mr-2" /> Sign in with Google</h2>
      <form id="googleForm" novalidate>
        <label for="googleEmail" class="block text-sm font-medium text-gray-700">Google Email Address</label>
        <input type="email" id="googleEmail" name="googleEmail" placeholder="Enter your email address@gmail.com" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-green-500 mb-4" required />
        <div id="googleError" class="text-red-600 text-sm hidden mb-2"></div>
        <button type="submit" class="w-full bg-white border border-gray-300 text-gray-700 font-semibold py-3 rounded-lg flex items-center justify-center space-x-2 hover:shadow-md transition-shadow duration-200">
          <img src="https://cdn1.iconfinder.com/data/icons/google-s-logo/150/Google_Icons-09-512.png" alt="Google logo" class="w-6 h-6" />
          <span>Sign In</span>
        </button>
      </form>
      <p class="switch-link" id="switchToLoginFromGoogle">Back to Log In</p>
    </div>
  </div>

  <script>
    // Utility function to show modal
    function showModal(modal) {
      modal.classList.add('active');
      modal.querySelector('input, button').focus();
      document.body.style.overflow = 'hidden';
    }
    // Utility function to hide modal
    function hideModal(modal) {
      modal.classList.remove('active');
      document.body.style.overflow = '';
    }

    // Elements
    const signupModal = document.getElementById('signupModal');
    const googleModal = document.getElementById('googleModal');
    const signupLink = document.getElementById('signupLink');
    const googleSignInBtn = document.getElementById('googleSignInBtn');
    const switchToLogin = document.getElementById('switchToLogin');
    const switchToLoginFromGoogle = document.getElementById('switchToLoginFromGoogle');
    const loginForm = document.getElementById('loginForm');
    const signupForm = document.getElementById('signupForm');
    const googleForm = document.getElementById('googleForm');
    const errorMessage = document.getElementById('errorMessage');
    const signupError = document.getElementById('signupError');
    const googleError = document.getElementById('googleError');

    // Open signup modal
    signupLink.addEventListener('click', e => {
      e.preventDefault();
      showModal(signupModal);
    });

    // Open Google sign-in modal
    googleSignInBtn.addEventListener('click', e => {
      e.preventDefault();
      showModal(googleModal);
    });

    // Close modals on close button click
    document.querySelectorAll('.modal-close').forEach(btn => {
      btn.addEventListener('click', e => {
        const modal = e.target.closest('.modal-bg');
        hideModal(modal);
      });
    });

    // Switch to login from signup modal
    switchToLogin.addEventListener('click', () => {
      hideModal(signupModal);
    });

    // Switch to login from google modal
    switchToLoginFromGoogle.addEventListener('click', () => {
      hideModal(googleModal);
    });

    // Login form validation and submission simulation
    loginForm.addEventListener('submit', e => {
      e.preventDefault();
      const email = loginForm.email.value.trim();
      const password = loginForm.password.value;
      const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;

      if (!emailRegex.test(email)) {
        errorMessage.textContent = 'Please enter a valid email address.';
        errorMessage.classList.remove('hidden');
        return;
      }
      if (password.length < 8) {
        errorMessage.textContent = 'Password must be at least 8 characters long for security.';
        errorMessage.classList.remove('hidden');
        return;
      }
      errorMessage.classList.add('hidden');
      alert(`Login successful!\nEmail: ${email}\nWelcome back to AI Farmer Advisor!`);
      loginForm.reset();
    });

    // Signup form validation and submission simulation
    signupForm.addEventListener('submit', e => {
      e.preventDefault();
      const email = signupForm.signupEmail.value.trim();
      const password = signupForm.signupPassword.value;
      const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;

      if (!emailRegex.test(email)) {
        signupError.textContent = 'Please enter a valid email address.';
        signupError.classList.remove('hidden');
        return;
      }
      if (password.length < 8) {
        signupError.textContent = 'Password must be at least 8 characters long.';
        signupError.classList.remove('hidden');
        return;
      }
      signupError.classList.add('hidden');
      alert(`Signup successful!\nEmail: ${email}\nYou can now log in.`);
      signupForm.reset();
      hideModal(signupModal);
    });

    // Google form validation and submission simulation
    googleForm.addEventListener('submit', e => {
      e.preventDefault();
      const email = googleForm.googleEmail.value.trim();
      const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;

      if (!emailRegex.test(email)) {
        googleError.textContent = 'Please enter a valid Google email address.';
        googleError.classList.remove('hidden');
        return;
      }
      googleError.classList.add('hidden');
      alert(`Google Sign-In successful!\nEmail: ${email}\nWelcome to AI Farmer Advisor!`);
      googleForm.reset();
      hideModal(googleModal);
    });

    // Responsive card width adjustment
    window.addEventListener('resize', () => {
      const card = document.querySelector('.card');
      if (window.innerWidth < 640) {
        card.classList.remove('max-w-md');
        card.classList.add('max-w-sm');
      } else {
        card.classList.remove('max-w-sm');
        card.classList.add('max-w-md');
      }
    });
  </script>
</body>
</html>
